<UserControl x:Class="UnoClient.InviteControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UnoClient"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="110" Background="Gray" Margin="0,0,0,10">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row ="0">
            <Label x:Name="label" FontSize="10"/>
        </Grid>

        <Grid Grid.Row ="1">
            <Button x:Name="buttonAccept" Click="buttonAccept_Click" Margin="5,0,0,0" FontSize="10" Content="Accept" HorizontalAlignment="Left" VerticalAlignment="Center" Width="45" Height="15"/>
            <Button x:Name="buttonDecline" Click="buttonDecline_Click" Margin="0,0,5,0" FontSize="10" Content="Decline" HorizontalAlignment="Right" VerticalAlignment="Center" Width="45" Height="15"/>

        </Grid>
    </Grid>
</UserControl>
