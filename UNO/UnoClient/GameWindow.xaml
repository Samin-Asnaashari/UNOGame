                    <Button Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Width="33" Height="55" Margin="0,5,5,0"/>
                    <Button Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Width="33" Height="55" Margin="0,5,5,0"/>
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="93" />
                <RowDefinition Height="130"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Image x:Name="Oponnent2Pic" HorizontalAlignment="Right" VerticalAlignment="Center" Width="45" Height="58" Margin="0,-15,331.2,49.8"  />
                <Label x:Name="Oponnent2Name" Content="Name" HorizontalAlignment="Left" Margin="73,37,0,0" VerticalAlignment="Top" Height="24" Width="78" FontSize="10.667"/>
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"  Background="Aqua" HorizontalAlignment="Right" VerticalAlignment="Center" Height="77" Width="200" Margin="0,0,20,0">
                    <StackPanel Orientation="Horizontal" Background="AliceBlue">
                        <Button Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Width="39" Height="55" Margin="5,5,5,0"/>
                        <Button Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Width="33" Height="55" Margin="0,5,5,0"/>
                        <Button Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Width="33" Height="55" Margin="0,5,5,0"/>
                        <Button Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Width="33" Height="55" Margin="0,5,5,0"/>
                        <Button Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Width="33" Height="55" Margin="0,5,5,0"/>
                        <Button Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Width="33" Height="55" Margin="0,5,5,0"/>
                    </StackPanel>
                </ScrollViewer>
            </Grid>

            <Grid Grid.Row="1">
                <Image x:Name="TableCard" HorizontalAlignment="Center" VerticalAlignment="Center" Width="68" Height="90" Margin="179,-21,126.6,60.6"/>
