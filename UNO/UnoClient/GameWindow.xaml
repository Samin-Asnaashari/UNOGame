            </Image>
            <Label x:Name="Oponnent3Name" Content="Name" HorizontalAlignment="Left" Margin="19,66,0,0" VerticalAlignment="Top" Height="24" Width="78" FontSize="10.667" RenderTransformOrigin="0.5,0.5">
                <Label.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="90"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Label.RenderTransform>
            </Label>
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"  Background="Aqua" HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="77" Width="200" RenderTransformOrigin="0.5,0.5" Margin="-68,0,-68,100" >
                <ScrollViewer.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="90"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </ScrollViewer.RenderTransform>
                <StackPanel Orientation="Horizontal" Background="AliceBlue">
                    <Button Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Width="39" Height="55" Margin="5,5,5,0"/>
                    <Button Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Width="33" Height="55" Margin="0,5,5,0"/>
                    <Button Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Width="33" Height="55" Margin="0,5,5,0"/>
                    <Button Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Width="33" Height="55" Margin="0,5,5,0"/>
                    <Button Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Width="33" Height="55" Margin="0,5,5,0"/>
                    <Button Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Width="33" Height="55" Margin="0,5,5,0"/>
