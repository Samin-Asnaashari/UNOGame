                </Image>
            </Grid>

            <Grid Grid.Row="2">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"  Background="Aqua" HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="92" Width="292" Margin="0,0,0,10">
                    <StackPanel Orientation="Horizontal" Background="AliceBlue">
                        <Button Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Width="45" Height="60" Margin="5,5,5,0"/>
                        <Button Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Width="45" Height="60" Margin="0,5,5,0"/>
                        <Button Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Width="45" Height="60" Margin="0,5,5,0"/>
                        <Button Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Width="45" Height="60" Margin="0,5,5,0"/>
                        <Button Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Width="45" Height="60" Margin="0,5,5,0"/>
                        <Button Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Width="45" Height="60" Margin="0,5,5,0"/>
                    </StackPanel>
                </ScrollViewer>
            </Grid>

        </Grid>

        <Grid Grid.Column="2">
            <Image x:Name="Oponnent3Pic" HorizontalAlignment="Right" VerticalAlignment="Center" Width="45" Height="58" Margin="0,73,22,237.8" RenderTransformOrigin="0.5,0.5"  >
