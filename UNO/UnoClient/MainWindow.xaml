<Window x:Class="UnoClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UnoClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Margin="0,0,0,10">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10">
                <Button Content="LoginButton" Click="LoginButton_Click" Width="75" Margin="0,0,0,5"/>
                <Button Content="LobbyButton" Click="LobbyButton_Click" Width="75" Margin="0,0,0,5"/>
                <Button Content="GameButton" Click="GameButton_Click" Width="75" Margin="0,0,0,5"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Column="1">
            <ContentControl x:Name="contentControl" Content="ContentControl" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        </Grid>






    </Grid>

</Window>
