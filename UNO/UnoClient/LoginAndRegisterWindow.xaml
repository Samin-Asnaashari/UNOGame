<UserControl x:Class="UnoClient.LoginAndRegisterWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UnoClient"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="600" Background="White">
    <Grid>

        <StackPanel HorizontalAlignment="Left" Height="auto" Margin="100,64,0,0" VerticalAlignment="Top" Width="258">
                <TextBox x:Name="textBoxUsername" Height="23" TextWrapping="Wrap" Text="Username" Margin="0,0,0,10"/>
                <TextBox x:Name="textBoxPassword" Height="23" TextWrapping="Wrap" Text="Password" Margin="0,0,0,10"/>
                <Button x:Name="BtnLogin" Content="Log in" Width="75" Click="button_Click"/>
            </StackPanel>

        </Grid>
</UserControl>
