<UserControl x:Class="UnoClient.CardControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UnoClient"
             mc:Ignorable="d" 
            MinWidth="71" MinHeight="100" MaxWidth="676" MaxHeight="940" Margin="2,5">

    <Grid ScrollViewer.VerticalScrollBarVisibility="Disabled" MinWidth="100" MinHeight="139" MaxWidth="676" MaxHeight="940" Background="Black">
        <Image x:Name="image" Source="/UnoClient;component/Images/cover.png" Width="Auto" Height="Auto">
            <Image.Style>
                <Style TargetType="Image">
                    <Setter Property="RenderOptions.BitmapScalingMode" Value="HighQuality" />
                </Style>
            </Image.Style>
        </Image>
        <Border x:Name="border" BorderThickness="10" />
    </Grid>
</UserControl>
