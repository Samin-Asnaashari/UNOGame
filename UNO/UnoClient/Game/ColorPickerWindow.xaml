<Window x:Class="UnoClient.Game.ColorPickerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UnoClient.Game"
        mc:Ignorable="d"
        Title="Pick a color..." WindowStartupLocation="CenterOwner" ResizeMode="NoResize" ShowInTaskbar="False" Topmost="True" Closing="Window_Closing" WindowStyle="None" SizeToContent="WidthAndHeight">
    <Grid>
        <WrapPanel x:Name="colors" HorizontalAlignment="Center" VerticalAlignment="Top" Width="210" Margin="10">
            <Rectangle Fill="Red" HorizontalAlignment="Left" Height="100" Stroke="Black" VerticalAlignment="Top" Width="100" Cursor="Hand" />
            <Rectangle Fill="Green" HorizontalAlignment="Left" Height="100" Margin="10,0,0,10" Stroke="Black" VerticalAlignment="Top" Width="100" Cursor="Hand"/>
            <Rectangle Fill="Blue" HorizontalAlignment="Left" Height="100" Stroke="Black" VerticalAlignment="Top" Width="100" Cursor="Hand"/>
            <Rectangle Fill="Yellow" HorizontalAlignment="Left" Height="100" Margin="10,0,0,0" Stroke="Black" VerticalAlignment="Top" Width="100" Cursor="Hand"/>
        </WrapPanel>
    </Grid>
</Window>
