<Window x:Class="UnoClient.Game.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:g="clr-namespace:UnoClient.Game"
        Title="Uno Game"
        Height="710" Width="710">
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.Background>
            <RadialGradientBrush>
                <GradientStop Color="#FF135704"/>
                <GradientStop Color="#FF2C7E1B" Offset="1"/>
            </RadialGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="50*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="100*"/>
            <ColumnDefinition Width="50*"/>
        </Grid.ColumnDefinitions>
        <g:CardHand x:Name="player1Hand" Grid.Row="2" Grid.Column="1"/>
        <g:CardHand x:Name="player2Hand" Grid.Column="1"/>
        <g:CardHand x:Name="player3Hand" Grid.Row="1"/>
            <g:CardHand x:Name="player4Hand" Grid.Row="1" Grid.Column="2"/>
    </Grid>
</Window>